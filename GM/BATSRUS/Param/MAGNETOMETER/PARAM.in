#ECHO
T

#VERBOSE
100

#PROGRESS
1			DnShowProgressShort
100			DnShowProgressLong

#DESCRIPTION
Run GM in time accurate mode

#PLANET
EARTH

#SAVERESTART
F

#TIMEACCURATE
T			DoTimeAccurate

#STARTTIME
2000			iYear
3			iMonth
21			iDay
10			iHour
45			iMinute
0			iSecond
0.0			FracSecond

#IDEALAXES
! align rotation and magnetic axes with z axis

#ROTATION
F			UseRotation


#MAGNETOSPHERE
T                       UseBody
2.5                     rBody
3.5                     rCurrents
10.0			BodyRhoDim
25000.0			BodyTDim

#GRID
1			nRootBlockX
1			nRootBlockY
1			nRootBlockZ
-224.			xMin
  32.			xMax
-128.			yMin
 128.			yMax
-128.			zMin
 128.			zMax

#INCLUDE
GM/Param/EARTH/Grid

#GRIDRESOLUTION
2.0                     Resolution
initial                 NameArea

#OUTERBOUNDARY
outflow                 TypeBcEast
vary                    TypeBcWest
float                   TypeBcSouth
float                   TypeBcNorth
float                   TypeBcBottom
float                   TypeBcTop

#INNERBOUNDARY
ionosphere		TypeBcInner

#SAVELOGFILE
T
RAW			StringLogfile
1			DnSaveLogfile
-1.			DtSaveLogfile

#TIMESTEPPING
1			nStage
0.6			CflExpl

#UPSTREAM_INPUT_FILE
T                                                     UseUpstreamInputFile
GM/Param/TESTSUITE/Inputfiles/IMF_NSturning_1nT.dat   NameUpstreamFile

#MAGNETOMETER
GM/Param/MAGNETOMETER/magin.dat				MagInputFile
-1							DnOutput
20.0							DtOutput

#SCHEME
1			nOrder
Rusanov			TypeFlux

#SAVEPLOT
3                       nPlotFile
x=0 FUL idl             StringPlot
-1                      DnSavePlot
10.			DtSavePlot
-1.                     DxSavePlot (resolution, 0. maximum, -1. unstructured)
y=0 FUL idl             StringPlot
-1                      DnSavePlot
10.			DtSavePlot
-1.                     DxSavePlot (resolution, 0. maximum, -1. unstructured)
z=0 FUL idl             StringPlot
-1                      DnSavePlot
10.			DtSavePlot
-1.                     DxSavePlot (resolution, 0. maximum, -1. unstructured)

#STOP
-1			MaxIteration
60.0			tSimulationMax

#END
