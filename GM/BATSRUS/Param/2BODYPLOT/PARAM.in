  32.0                  zMaxBox

#GRIDRESOLUTION
1.0                     Resolution
box                     NameArea
 -48.0                  xMinBox
 -16.0                  yMinBox
 -16.0                  zMinBox
  32.0                  xMaxBox
  16.0                  yMaxBox
  16.0                  zMaxBox

#GRIDRESOLUTION
1/2                     Resolution
box                     NameArea
 -32.0                  xMinBox
  -8.0                  yMinBox
  -8.0                  zMinBox
  32.0                  xMaxBox
   8.0                  yMaxBox
   8.0                  zMaxBox

#GRIDRESOLUTION
1/4                     Resolution
box                     NameArea
 -32.0                  xMinBox
  -8.0                  yMinBox
  -4.0                  zMinBox
   8.0                  xMaxBox
   8.0                  yMaxBox
   4.0                  zMaxBox


#OUTERBOUNDARY
outflow                 TypeBcEast
vary                    TypeBcWest
float                   TypeBcSouth
float                   TypeBcNorth
float                   TypeBcBottom
float                   TypeBcTop

#SECONDBODY
T                       UseBody2   ! Rest of the parameters read if .true.
2.0                     rBody2 
0.                      xBody2
0.                      yBody2
20.                     zBody2
3.0                     rCurrents2  !This is unused currently 
20.0                    RhoDimBody2 (/ccm) density for fixed BC for rho_BLK
35000.0                 TDimBody2 (K) temperature for fixed BC for P_BLK

#DIPOLEBODY2
0.0                     BdpDimBody2x [nT]
0.0                     BdpDimBody2y [nT]
-1200.0                 BdpDimBody2z [nT]

#INNERBOUNDARY
ionosphere		TypeBcInner
fixed			TypeBcBody2

#SAVELOGFILE
T
RAW			StringLogfile
1			DnSaveLogfile
-1.			DtSaveLogfile

#TIMESTEPPING
1			nStage
0.6			CflExpl

#SOLARWINDFILE
T                                                     UseUpstreamInputFile
GM/Param/TESTSUITE/Inputfiles/IMF_NSturning_1nT.dat   NameUpstreamFile

#SCHEME
1			nOrder
Rusanov			TypeFlux

