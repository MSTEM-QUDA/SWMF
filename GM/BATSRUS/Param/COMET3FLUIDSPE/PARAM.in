8.0                     SW_rho_dim [n/cc]
1.E5                    SW_T_dim [K]     
-371.                   SW_Ux_dim [km/s] 
0.0                     SW_Uy_dim [km/s] 
0.0                     SW_Uz_dim [km/s] 
-3.4                    SW_Bx_dim [nT]   
3.4                     SW_By_dim [nT]
0.0                     SW_Bz_dim [nT]

#OUTERBOUNDARY
outflow                  TypeBcEast
user                     TypeBcWest
float                    TypeBcSouth
float                    TypeBcNorth
float                    TypeBcBottom
float                    TypeBcTop

#EXTRABOUNDARY
T                       UseExtraBoundary
user                    TypeExtraBoundary
F                       DoFixExtraboundary

#FACEBOUNDARY
-1                      MinFaceBoundary
-1                      MaxFaceBoundary
F                       DoFixOuterBoundary

#GRID
2                        proc_dims(1)
2                        proc_dims(2)
2                        proc_dims(3),
-0.02                  x1
 0.02                  x2
-0.02                  y1
 0.02                  y2
-0.02                  z1
