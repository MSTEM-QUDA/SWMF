  INCLUDEGEOM = NO
  INCLUDECUSTOMLABELS = NO
  VARLOADMODE = BYPOSITION
  INITIALPLOTTYPE = CARTESIAN3D
$!ALTERDATA  [2]
  EQUATION = 'V1=V1*2.7' 
$!ALTERDATA  [2]
