#COMPONENTMAP
IH  0 -1 1		CompMap
GM  0 -1 1		CompMap

! Useful to see the location of the Earth in the heliosphere
#TEST
CON_axes::init_axes		StringTest

#INCLUDE
RESTART.in

#DESCRIPTION
Param/PARAM.in.test.IHGM: Couple IH to GM		StringDescription

#TIMEACCURATE
F			IsTimeAccurate

#SAVERESTART
T			DoSaveRestart
2000			DnSaveRestart
-1.0			DtSaveRestart

#BEGIN_COMP IH ---------------------------------------------------------------

! IH is in HGI, which is not really valid in steady state mode
! but OK for initializing GM
#STRICT
F			UseStrict

#INCLUDE
IH/restartIN/restart.H

#INNERBOUNDARY
buffergrid		TypeBcBody

#USERSWITCH
+init			StringSwitch

#OUTERBOUNDARY
float			TypeBc1
float			TypeBc2
float			TypeBc3
float			TypeBc4
float			TypeBc5
float			TypeBc6

#SAVEINITIAL
T			DoSaveInitial

#SAVEPLOT
1			nPlotFile
y=0 MHD idl		StringPlot
10			DnSavePlot
-1.			DtSavePlot
-1.			DxSavePlot

#END_COMP IH -----------------------------------------------------------------

#BEGIN_COMP GM ---------------------------------------------------------------

#GRIDBLOCKALL
5000			MaxBlock

#GRID
1			nRootBlock1
1			nRootBlock2
1			nRootBlock3
-224.			xMin
 32.			xMax
-128.			yMin
 128.			yMax
-128.			zMin
 128.			zMax

! Maximum resolution initially
#GRIDRESOLUTION
2.0			Resolution
initial			StringShape

! Minimum resolution in the computational domain
#GRIDRESOLUTION
8.0			Resolution
all			StringShape

#GRIDRESOLUTION
1.0			Resolution
box			StringShape
-100.0			xMinBox
 -16.0			yMinBox
 -16.0			zMinBox
  22.0			xMaxBox
  16.0			yMaxBox
  16.0			zMaxBox

! Better res at geosync and near tail.
#GRIDRESOLUTION
1/4			Resolution
box			StringShape
-20.0			xMinBox
-8.0			yMinBox
-8.0			zMinBox
 8.0			xMaxBox
 8.0			yMaxBox
 8.0			zMaxBox

! Close tail and bow shock resolution
#GRIDRESOLUTION
1/2			Resolution
box			StringShape
-32.0			xMinBox
-22.0			yMinBox
-10.0			zMinBox
 20.0			xMaxBox
 22.0			yMaxBox
 10.0			zMaxBox

#GRIDRESOLUTION
1/8			Resolution
shell0			StringShape
2.5			RadiusInner
3.5			Radius

#GRIDRESOLUTION
2.0			Resolution
initial			StringShape

#DOAMR
T			DoAmr
60			DnAmr
-1.0			DtAmr
T			IsStrictAmr

#BODY
T			UseBody
2.5			rBody      [rEarth]
3.5			rCurrents  [rEarth]
10.0			BodyNDim   [/cc]
25000.0			BodyTDim   [K]

! This is used to initialize the domain
#SOLARWIND
    5.0			SwNDim   [/cc]
250000.0		SwTDim   [K]
  -400.0		SwUxDim  [km/s]
     0.0		SwUyDim  [km/s]
     0.0		SwUzDim  [km/s]
     0.0		SwBxDim  [nT]
     0.0		SwByDim  [nT]
    -5.0		SwBzDim  [nT]

! The upstream boundary condition is obtained from IH
#OUTERBOUNDARY
outflow			TypeBc1
coupled			TypeBc2
float			TypeBc3
float			TypeBc4
float			TypeBc5
float			TypeBc6

#INNERBOUNDARY
ionosphere		TypeBcBody

#SCHEME
1			nOrder
Rusanov			TypeFlux

#SAVELOGFILE
T			DoSaveLogfile
RAW			StringLog
1			DnSaveLogfile
-1.			DtSaveLogfile

#SAVEINITIAL
T			DoSaveInitial

#SAVEPLOT
2			nPlotFile
y=0 MHD idl		StringPlot
10			DnSavePlot
-1.			DtSavePlot
-1.			DxSavePlot
z=0 MHD idl		StringPlot
10			DnSavePlot
-1.			DtSavePlot
-1.			DxSavePlot

#END_COMP GM -----------------------------------------------------------------

! Only need to couple at the beginning and after AMRs in GM (if any)
#COUPLE1
IH			NameSource
GM			NameTarget
60			DnCouple
-1.0			DtCouple

! Note: the GM->IH coupling does not work if IH is not active!
! The following command makes sure that IH is not evolving
#CYCLE
IH			NameComp
100000			DnRun

#STOP
100			MaxIter
-1.0			TimeMax


