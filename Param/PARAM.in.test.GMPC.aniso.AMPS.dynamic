This tests GM-PC coupling with different layouts.
This is not meant to be a practical layout.

#COMPONENTMAP
GM  1 -1  1		CompMap runs on all PE-s except 0
PC  0  3  1		CompMap runs on first 4 PE-s

#DESCRIPTION
Param/PARAM.in.test.GMPC.aniso.AMPS.dynamic: Run GM and PC in time accurate mode		StringDescription

#PLANET
NONE			NamePlanet

#SAVERESTART
F			DoSaveRestart
-1			DnSaveRestart
100			DtSaveRestart

#COUPLE2TIGHT
GM			NameMaster
PC			NameSlave
T			DoCouple


COUPLE2
GM
PC
-1
1

#PROGRESS
1			DnProgressShort
1			DnProgressLong

#BEGIN_COMP GM ---------------------------------------------------------------

USERMODULE
Waves and GEM, Yingjuan Ma
 1.30			VersionUserModule

#IOUNITS
NONE			TypeIoUnit

#NORMALIZATION
NONE			TypeNormalization

#PLASMA
1.0			FluidMass [amu]
1.0			IonCharge [e]
1.0			ElectronTemperatureRatio


#NONCONSERVATIVE
T			UseNonConservative


#UNIFORMSTATE
1.0			StateVar Rho
0.0			StateVar Ux
0.0			StateVar Uy
0.0			StateVar Uz
0.0			StateVar Bx
0.04			StateVar By
0.0			StateVar Bz
4.5e-4			StateVar Ppar
4.5e-4			StateVar p

rho			= 1
By			= 0.04
cA			= By/sqrt(rho)   = 0.04
cS			= sqrt(2*p/rho)  = 0.03
cF			= sqrt(cA^2+cS^2)= 0.05
lambda= 32
t			= lambda/(cF) = 640.0

p = pe = 2.25e-4
vth			= sqrt(p/rho) = 0.015
me = mi/25
vthe  = 5*vth		= 0.075
dx = 0.4
dtmax = dx/vthe		= 5.333
dt			= 0.2*dtmax   = 1.066

#USERINPUTBEGIN -----------------------------------

#WAVE
1			Rho_
1000.0			Width
0.1			Amplitude
32.0			LambdaX
-1.0			LambdaY
-1.0			LambdaZ
0.0			Phase

#WAVE
2			Ux_
1000.0			Width
0.005			Amplitude (rho1/rho0)*cF
32.0			LambdaX
-1.0			LambdaY
-1.0			LambdaZ
0.0			Phase

#WAVE
6			By_
1000.0			Width
0.004			Amplitude (rho1/rho0)*b0
32.0			LambdaX
-1.0			LambdaY
-1.0			LambdaZ
0.0			Phase

#WAVE
8			Ppar_
10000.0			Width
4.5e-5			Amplitude (rho1/rho0)*pPar0
32.0			LambdaX
-1.0			LambdaY
-1.0			LambdaZ
0.0			Phase

#WAVE
9			p_
10000.0			Width
7.5e-5			Amplitude (rho1/rho0)*5/3*p0
32.0			LambdaX
-1.0			LambdaY
-1.0			LambdaZ
0.0			Phase

#USERINPUTEND -------------------------------------

SHOCKPOSITION
0.0			ShockPosition
4/3			ShockSlope

#GRID
8			nRootBlock1
8			nRootBlock2
8			nRootBlock3
-20			xMin
 20			xMax
-20			yMin
 20			yMax
-20			zMin
 20			zMax

#CHECKGRIDSIZE
   8			nI
   8			nJ
   8			nK
1000			MinBlockAll

#FIXEDTIMESTEP
T			UseDtFixed
1.0			DtFixedDim

#PICUNIT
 1.0			xUnitPicSi
 1.0			uUnitPicSi

#PICGRID
1			nPicGrid
-16			xMinPic
 16 			xMaxPic
-8			yMinPic
 8			yMaxPic
-4			zMinPic
 4			zMaxPic
0.5			DxPic
0.5			DyPic
0.5			DzPic




 5.0			xMinCut
 25.0			xMaxCut
-20.0			yMinCut
 20.0			yMaxCut
1.25/3			DxPic
1.25/3			DyPic

#OUTERBOUNDARY
periodic		TypeBc1
periodic		TypeBc2
periodic		TypeBc3
periodic		TypeBc4
float			TypeBc5
float			TypeBc6

HALLRESISTIVITY
T			UseHallResistFlux
1.0			HallFactor
0.0			HallCmaxFactor

#TEST
init_hall_resist		StringTest

#DIVBSOURCE
