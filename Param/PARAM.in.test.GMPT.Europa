!- PARAM.in:  Example input file for EUROPA Layered Single Fluid MHD --

#COMPONENTMAP
GM  0 -1  1   
PT  1  2  1  

#PLANET
EUROPA			NamePlanet

#INCLUDE
RESTART.in

#TIMEACCURATE
T			DoTimeAccurate

#ROTATION
F                       UseRotation

#DIPOLE
0.0E-9			abs Magn. Field [T]

#MAGNETICAXIS
T			IsMagAxisPrimary (rest of parameters read if true)
90.0			MagAxisTheta [degree] entry in GSE, tilt from z-axis
288.0			MagAxisPhi   [degree] tilt from x-axis clockwise

#TEST
CON_axes::init_axes CON_axes::set_axes 

#PROGRESS
1                     DnProgress1 (frequency of short reports to STDOUT)
10                    DnProgress2 (frequency of summaries to STDOUT)

#CHECKSTOPFILE
T

#CHECKSTOP
T
-1
10.0

#CPUTIMEMAX
1720000.0

#BEGIN_COMP PT ---------------------------------------

#TEST
T			DoTest

#END_COMP PT

#BEGIN_COMP GM ---------------------------------------

#INCLUDE
GM/restartIN/restart.H

#TESTVAR
7			iVarTest (Bz)

#COORDSYSTEM
GSE			TypeCoordSystem

#SOLARWIND
15.0			SW_rho_dim [n/cc]
1.044e6			SW_T_dim [K] | 90eV
-100.			SW_Ux_dim [km/s] | corotation speed
0.0			SW_Uy_dim [km/s]
0.0			SW_Uz_dim [km/s]
0.0			SW_Bx_dim [nT]
0.0			SW_By_dim [nT]
-425.			SW_Bz_dim [nT]

#PLASMA
20.0			IonMass O [amu]
1.0			IonCharge O [e]
0.6			ElectronTemperatureRatio

#BODY
T			UseBody
1.0			rBody
0.0			rCurrents
10000.0			BodyRhoDim (1/ccm)
600.0			BodyTDim (K) temperature for fixed BC for P_BLK

#UNIFORMAXIS
T                       UseUniformAxis

#FIXAXIS
T                       DoFixAxis
100.0                   rFixAxis
1.2                     r2FixAxis

#TESTXYZ
2.0			xTest
0.0			yTest
0.0			zTest

#OUTERBOUNDARY
outflow			TypeBc1
inflow			TypeBc2
float			TypeBc3
float			TypeBc4
float			TypeBc5
float			TypeBc6

#INNERBOUNDARY
user			TypeBcInner

#MINIMUMDENSITY
1E-4			RhoMin

#MINIMUMPRESSURE
1e-8			pMin
1e-8			PeMin

#TIMESTEPPING
1			nSTAGE
1.0			Cfl

#SCHEME
2			nOrder
Linde			TypeFlux | only for nOrder=2
minmod			TypeLimiter

#RESTARTOUTFILE
one			TypeRestartOutFile

#NONCONSERVATIVE
T			UseNonConservative

#CONSERVATIVECRITERIA
0

#USERSWITCH
+init +ic +source		StringSwitch

#SAVEINITIAL
T			DoSaveInitial

#SAVEPLOT
3
x=0 MHD idl		StringPlot
-1  			DnSavePlot
20.0			DtSavePlot
-1.0			DxSavePlot
y=0 MHD idl		StringPlot
-1  			DnSavePlot
20.0			DtSavePlot
-1.0			DxSavePlot
z=0 MHD idl		StringPlot
-1  			DnSavePlot
20.0			DtSavePlot
-1.0			DxSavePlot

#SAVELOGFILE
T                       DoSaveLogfile, rest of parameters read if true
VAR step date time      StringLog
1                       DnSaveLogfile
-1.                     DtSaveLogfile [sec]
rho Ux Uy Uz Bx By Bz p rhopnt Uxpnt Uypnt Uzpnt ppnt Pmin Pmax

#SAVEINITIAL
F			DoSaveInitial

#USERINPUTBEGIN --------------------

! See Shematovich (2005)
#EUROPA
1.7E7			Neutral surface density for exponential comp. [1/cm^3]
150			Neutral scale height for exponential comp. [km]
0.0E4			Neutral surface density for power-law comp. [1/cm^3]
3.5			Index for the power-law falling-off compoent
1.0			Radius of the neutral atmos. base [planet radius]
2.			Max fraction in cosine relative to uniform distr.
20			mean ion mass [amu]
50.0			Minimum ion temperature (in user_update_states) [K]
1.0E-6			Ionization frequency (1/s)
2.0E-15			Charge-exchange cross-section (cm^2)
0.0E-8			recombination rate (cm^3/s)

#INNERBCS
custom 			! if 'custom' then read the following
float			! innerbcs_rho (upstream only)
float			! innerbcs_p   (upstream only)
zero			! innerbcs_u
float			! innerbcs_b

#BODYPARAM
1000.0			Body number density (in /cc) on upsteam
600.0			Body temperature (in K) on upstream
100.0			Body number deisnty (in /cc) on downstream
600.0			Body temperature (in K) on downstream

#USERINPUTEND ----------------------

#END_COMP GM -------------------------------------

#COUPLE1
GM                      NameComp1
PT                      NameComp2
-1                      DnCouple
50.0			Dtcouple

#STOP
-1			MaxIteration
200.0			tSimulationMax

#END
