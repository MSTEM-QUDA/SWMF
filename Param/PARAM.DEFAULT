#ECHO
T

#PROGRESS
1			DnShowProgressShort
100			DnShowProgressLong

#DESCRIPTION
Run GM and IE in steady state mode

#SAVERESTART
F

#TIMEACCURATE
T			DoTimeAccurate

#STARTTIME
2000			iYear
3			iMonth
21			iDay
10			iHour
45			iMinute
0			iSecond
0.0			FracSecond

#IDEALAXES
! align rotation and magnetic axes with z axis

#ROTATION
F			UseRotation

#BEGIN_COMP GM #############################################################

#PROBLEMTYPE
11                      iProblemType (11=Earth Magnetosphere)

#MAGNETOSPHERE
T                       UseBody
2.5                     rBody
3.5                     rCurrents
10.0			BodyRhoDim
25000.0			BodyTDim

#GRID
1			nRootBlockX
1			nRootBlockY
1			nRootBlockZ
-224.			xMin
  32.			xMax
-128.			yMin
 128.			yMax
-128.			zMin
 128.			zMax

#AMRINIT
mag_new			TypeRefineInit
4			nRefineLevelInit

#OUTERBOUNDARY
outflow                 TypeBcEast
vary                    TypeBcWest
float                   TypeBcSouth
float                   TypeBcNorth
float                   TypeBcBottom
float                   TypeBcTop

#INNERBOUNDARY
ionosphere		TypeBcInner

#SAVELOGFILE
T
RAW			StringLogfile
1			DnSaveLogfile
-1.			DtSaveLogfile

#TIMESTEPPING
1			nStage
0.6			CflExpl

#UPSTREAM_INPUT_FILE
T                                                     UseUpstreamInputFile
GM/Param/TESTSUITE/Inputfiles/IMF_NSturning_1nT.dat   NameUpstreamFile

#SCHEME
1			nOrder
Rusanov			TypeFlux

#SAVEPLOT
3                       nPlotFile
x=0 FUL idl             StringPlot
-1                      DnSavePlot
10.			DtSavePlot
-1.                     DxSavePlot (resolution, 0. maximum, -1. unstructured)
y=0 FUL idl             StringPlot
-1                      DnSavePlot
10.			DtSavePlot
-1.                     DxSavePlot (resolution, 0. maximum, -1. unstructured)
z=0 FUL idl             StringPlot
-1                      DnSavePlot
10.			DtSavePlot
-1.                     DxSavePlot (resolution, 0. maximum, -1. unstructured)

#END_COMP GM ###############################################################

#COUPLE2
IE			NameComp1
GM			NameComp2
-1                      DnCouple
1.0                     Dtcouple

! Allow GM to step through coupling time
#COUPLETIME
GM			NameComp
F			DoCoupleOnTime

#BEGIN_COMP IE #############################################################

#IONOSPHERE
0                       iConductanceModel
F                       UseFullCurrent
F                       UseFakeRegion2
150.0                   F10.7 Flux
5.0                     StarLightPedConductance
0.25                    PolarCapPedConductance

#SAVEPLOT
2			nPlotFile
min idl                 StringPlot
2			DnSavePlot
-1.0			DtSavePlot
max tec                 StringPlot
2			DnSavePlot
-1.0			DtSavePlot

#END_COMP IE ###############################################################

#STOP
-1			MaxIteration
5.0			tSimulationMax

#RUN ##########################################################################

#STOP
-1			MaxIteration
10.0			tSimulationMax

#BEGIN_COMP GM ################################################################

#AMR
30                      DnRefine
T                       DoAutoRefine 
10.                     PercentCoarsen
30.                     PercentRefine
99999                   MaxTotalBlocks

#SCHEME
2			nOrder
Rusanov			TypeFlux
minmod			TypeLimiter

#TIMESTEPPING
2			nStage
0.8			CflExpl

#END_COMP GM ###############################################################
