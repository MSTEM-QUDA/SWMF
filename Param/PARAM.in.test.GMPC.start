#UNIFORMSTATE
1.0			Rho
0.0			Ux
0.0			Uy
0.0			Uz
0.2			Bx
0.0			By
0.0			Bz
5.12e-4			p

rho   = 1
By    = 0.04
cA    = By/sqrt(rho)   = 0.04
cS    = sqrt(2*p/rho)  = 0.03
cF    = sqrt(cA^2+cS^2)= 0.05
lambda= 32
t     = lambda/(cF) = 640.0

p = pe = 2.25e-4
vth   = sqrt(p/rho) = 0.015
me = mi/25
vthe  = 5*vth       = 0.075 
dx = 0.4
dtmax = dx/vthe     = 5.333
dt    = 0.2*dtmax   = 1.066

